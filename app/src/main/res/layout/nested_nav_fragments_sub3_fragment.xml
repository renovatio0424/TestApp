<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/nested_nav_fragments_sub3_fragment_show_second_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show second screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nested_nav_fragments_sub3_fragment_popup_subs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/nested_nav_fragments_sub3_fragment_popup_subs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popup sub fragments"
        app:layout_constraintTop_toBottomOf="@id/nested_nav_fragments_sub3_fragment_show_second_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>